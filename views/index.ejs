<!DOCTYPE html>

<html lang="en" id="ip2geoapp" class="ip2geoapp">
    <head id="head">
        <%- include("./partials/head"); %>
    </head>
    <body>
      <form id="form">
        <%- include("./partials/header"); %>
        <div class="center-block">
          <div class="container">
            <div class="row">
              <div class="col-md-12">
                <h1 title="Enter any IP to get Geolocation">Enter any IP Address</h1>
              </div>
              <div class="col-md-12">
                <div class="input-group input-group-lg">
                  <input type="text" class="form-control" placeholder="e.g. 1.1.1.1" value="<%=ipaddress%>">
                  <span class="input-group-btn">
                    <button class="btn btn-default" type="submit" title="Convert an IP address to Geolocation">Go!</button>
                  </span>
                </div>
              </div>
            </div>
          </div>
          <div class="container-fluid full-width">
            <div class="result">
              <div class="row row-no-gutter">
                  <div class="col-md-9">
                    <h2 class="hide">Map</h2>
                    <div id="map" class="mapWrapper"></div>
                  </div>
                  <div class="col-md-3">
                    <h2 class="hide">JSON</h2>
                    <pre id="json"></pre>
                  </div>
              </div>
            </div>
          </div>
        </div>
        <%- include('./partials/footnote'); %>
      </form>
    </body>
    <%- include('./partials/footer'); %>
</html>